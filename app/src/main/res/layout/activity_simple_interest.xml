<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/simple_interest_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/simple_interest_title"
                style="?attr/textAppearanceHeadline5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Simple Interest Calculator"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/principal_amount_subtitle"
                style="?attr/textAppearanceLabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart = "32dp"
                android:text="Principal Amount ($):"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/simple_interest_title" />

            <EditText
                android:id="@+id/input_principal_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceLabelLarge"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="Enter Principal Amount..."
                android:inputType="number"
                android:text="10000"
                app:layout_constraintLeft_toRightOf="@id/principal_amount_subtitle"
                app:layout_constraintTop_toBottomOf="@id/simple_interest_title" />

            <SeekBar
                android:id="@+id/principal_amount_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="100000"
                android:progress="1000"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_principal_amount" />


            <TextView
                android:id="@+id/investment_time_subtitle"
                style="?attr/textAppearanceSubtitle1"
                android:layout_width="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Time of Investment (years):"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/principal_amount_seekBar" />

            <EditText
                android:id="@+id/input_investment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="10"
                android:hint="Enter Time of Investment..."
                app:layout_constraintLeft_toLeftOf="@id/principal_amount_subtitle"
                app:layout_constraintTop_toBottomOf="@id/investment_time_subtitle" />

            <TextView
                android:id="@+id/interest_rate_subtitle"
                android:layout_width="wrap_content"
                style="?attr/textAppearanceSubtitle1"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="Annual Interest Rate (%):"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_investment_time" />

            <EditText
                android:id="@+id/input_interest_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="5.0"
                android:hint="Enter Interest Rate..."
                app:layout_constraintLeft_toLeftOf="@id/interest_rate_subtitle"
                app:layout_constraintTop_toBottomOf="@id/interest_rate_subtitle" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simple_interest_card_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/minimal_background_simple_green_design_vector_242622_257"
            >
            <TextView
                android:id="@+id/simple_monthly_payments"
                android:text="Monthly Payments (if applicable): "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceSearchResultTitle"
                android:layout_marginTop="32dp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/simple_interest"
                android:text="Interest: "
                style="?attr/textAppearanceSearchResultTitle"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/simple_monthly_payments"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/simple_principal_and_interest"
                android:text="Principal and Interest: "
                style="?attr/textAppearanceSearchResultTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/simple_interest"
                app:layout_constraintLeft_toLeftOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>