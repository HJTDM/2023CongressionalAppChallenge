<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lessons.unit2.lesson5.Unit2Lesson5MainFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/unit2_lesson5_title_main"
                style="?attr/textAppearanceHeadline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/unit2_lesson5_title"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/unit2_lesson5_part1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unit2_lesson5_part1"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unit2_lesson5_title_main"/>

            <TextView
                android:id="@+id/unit2_lesson5_title_demand"
                style="?attr/textAppearanceBodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/demand"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unit2_lesson5_part1" />

            <TextView
                android:id="@+id/unit2_lesson5_part2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unit2_lesson5_part2"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unit2_lesson5_title_demand"/>

            <ImageView
                android:id="@+id/unit2_lesson5_picture_1"
                android:layout_width="0dp"
                android:layout_height="230dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unit2_lesson5_part2"
                android:src="@drawable/unit2_lesson5_picture_1" />

            <TextView
                android:id="@+id/unit2_lesson5_part3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unit2_lesson5_part3"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unit2_lesson5_picture_1"/>

            <TextView
                android:id="@+id/unit2_lesson5_title_supply"
                style="?attr/textAppearanceBodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/supply"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unit2_lesson5_part3" />

            <TextView
                android:id="@+id/unit2_lesson5_part4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unit2_lesson5_part4"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unit2_lesson5_title_supply"/>

            <ImageView
                android:id="@+id/unit2_lesson5_picture_2"
                android:layout_width="0dp"
                android:layout_height="230dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unit2_lesson5_part4"
                android:src="@drawable/unit2_lesson5_picture_2" />

            <TextView
                android:id="@+id/unit2_lesson5_part5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unit2_lesson5_part5"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unit2_lesson5_picture_2"/>

            <Button
                android:id="@+id/assessment_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/take_the_assessment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/unit2_lesson5_part5"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>